{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "REST API",
    "description": "Person API"
  },
  "servers": [
    {
      "url": "http://localhost:30083"
    }
  ],
  "paths": {
    "/person/list": {
      "get": {
        "summary": "Gets all people",
        "description": "",
        "responses": {
          "200": {
            "description": "Returns PEOPLE or error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/People"
                }
              }
            }
          }
        }
      }
    },
    "/person/samples": {
      "get": {
        "summary": "Makes 5 sample people and adds them to DATA",
        "description": "",
        "responses": {
          "200": {
            "description": "Returns PERSON or error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/People"
                }
              }
            }
          }
        }
      }
    },
    "/person/{id}": {
      "get": {
        "summary": "Gets person by ID",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns PERSON or error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Person"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deletes an existing PERSON by ID",
        "description": "Returns status message",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/person/": {
      "post": {
        "summary": "Add a new PERSON",
        "description": "Returns status message",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Person"
              }
            }
          }
        }
      },
      "put": {
        "summary": "Updates an existing PERSON",
        "description": "Returns status message",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Person"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Person": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "unique identity"
          },
          "firstname": {
            "type": "string",
            "example": "first name"
          },
          "lastname": {
            "type": "string",
            "example": "last name"
          },
          "cellphone": {
            "type": "string",
            "example": "cell phone"
          },
          "company": {
            "type": "string",
            "example": "company"
          },
          "email": {
            "type": "string",
            "example": "email"
          }
        },
        "required": [
          "id",
          "firstname",
          "lastname"
        ]
      },
      "People": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "example": "array"
          },
          "items": {
            "$ref": "#/components/schemas/Person"
          }
        }
      }
    }
  }
}