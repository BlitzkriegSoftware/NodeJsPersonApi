{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "REST API",
    "description": "Person API"
  },
  "servers": [
    {
      "url": "http://localhost:30083"
    }
  ],
  "paths": {
    "/person/list": {
      "get": {
        "summary": "Gets all people",
        "description": "Returns a JSON array of PERSON",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/person/samples": {
      "get": {
        "summary": "Makes 5 sample people and adds them to DATA",
        "description": "",
        "responses": {
          "200": {
            "description": "Returns a JSON array of PERSON",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/People"
                }
              }
            }
          }
        }
      }
    },
    "/person/{id}": {
      "get": {
        "summary": "Gets person by ID",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns PERSON or error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Person"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deletes an existing PERSON by ID",
        "description": "Returns status message",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/person/": {
      "post": {
        "summary": "Add a new PERSON",
        "description": "Returns status message",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Person"
              }
            }
          }
        }
      },
      "put": {
        "summary": "Updates an existing PERSON",
        "description": "Returns status message",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Person"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Person": {
        "$id": "unique identity",
        "$firstname": "first name",
        "$lastname": "last name",
        "cellphone": "cell phone",
        "company": "company",
        "email": "email"
      },
      "People": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Person"
        }
      }
    }
  }
}